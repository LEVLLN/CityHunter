<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="14dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_organization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <ImageView
                android:id="@+id/iv_organization"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/organization_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="188dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_title"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/organization_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="226dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_address"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/organization_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_description"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>

                <TextView
                    android:textAllCaps="true"
                    android:id="@+id/tv_recomended"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Рекомендуем"
                    android:textSize="20dp"
                    android:layout_marginTop="140dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/white"
                    android:background="@color/green"/>



        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>